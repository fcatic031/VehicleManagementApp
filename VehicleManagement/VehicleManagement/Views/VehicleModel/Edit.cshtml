@model VehicleManagement.Models.VehicleModel

@{
    ViewData["Title"] = "Edit Vehicle Model";
}
<h2>Edit Vehicle Model</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Abrv" class="control-label"></label>
        <input asp-for="Abrv" class="form-control" />
        <span asp-validation-for="Abrv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>