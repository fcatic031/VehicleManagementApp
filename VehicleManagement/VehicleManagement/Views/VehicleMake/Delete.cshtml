@model VehicleManagement.Models.VehicleMake


@{
    ViewData["Title"] = "Delete Vehicle Make";
}
<h2>Are you sure you want to delete this vehicle make?</h2>

<div>
    <h4>Vehicle Make</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Abrv
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Abrv)
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>